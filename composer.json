{
    "name": "locquiano101/todoease",
    "description": "A simple todo application",
    "type": "project",
    "require": {
        "php": "^8.4",
        "phpmailer/phpmailer": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "config/database.php",
            "config/notification.php"
        ]
    },
    "config": {
        "platform": {
            "php": "8.4.14"
        },
        "optimize-autoloader": true
    }
}